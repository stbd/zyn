{
    "name": "zynjs",
    "version": "1.0.0",
    "description": "Zyn Javascript library",
    "main": "src/main.mjs",
    "scripts": {
        "zyn-compile-js": "node esbuild.mjs",
        "zyn-compile-js-watch": "esbuild --watch=forever --platform=browser --global-name=zyn --bundle src/main.mjs --outfile=../py/zyn/client/zyn-web-static/zyn.js",
        "zyn-compile-css": "tailwindcss -i css/zyn.css --minify -o zyn.css",
        "zyn-compile-css-watch": "tailwindcss --watch=always --poll -i css/zyn.css -o ../py/zyn/client/zyn-web-static/zyn.css",
        "static-analysis": "standard --ignore '*test_*'",
        "test": "mocha"
    },
    "author": "",
    "license": "GPL-2.0-only",
    "dependencies": {
        "@tailwindcss/typography": "^0.5.13",
        "diff": "^5.2.0",
        "pdfjs-dist": "^4.5.136",
        "showdown": "^2.1.0",
        "tailwindcss": "^3.4.9"
    },
    "devDependencies": {
        "esbuild": "^0.23.0",
        "jest": "^29.7.0",
        "mocha": "^10.7.3",
        "sinon": "^18.0.0",
        "standard": "^17.1.0"
    }
}
